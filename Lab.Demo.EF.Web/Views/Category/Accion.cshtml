@model Lab.Demo.EF.Entities.Categories
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Accion", "Category", FormMethod.Post))
{
    @Html.HiddenFor(c => c.CategoryID)
    <div class="form-group">Nombre: @Html.TextBoxFor(c => c.CategoryName, new { @class="form-control" } )</div>
    <div class="form-group">Descripción: @Html.TextBoxFor(c => c.Description, new { @class = "form-control" } )</div>

    <input class="btn btn-primary" type="submit" name="Guardar" value="Guardar"/>
    @Html.ActionLink("Volver", "Back", "Category", new { @class="btn btn-default"})
}