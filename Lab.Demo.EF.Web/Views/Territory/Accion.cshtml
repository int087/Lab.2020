@model Lab.Demo.EF.Entities.Territories

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Accion", "Territory", FormMethod.Post))
{
    @Html.HiddenFor(t => t.TerritoryID)
    <div class="form-group">Descripción: @Html.TextBoxFor(t => t.TerritoryDescription, new { @class= "form-control"})</div>
    <div class="form-group">Región: @Html.DropDownListFor(t => t.RegionID, (IEnumerable<SelectListItem>)ViewBag.regionList, new { @class= "form-control" })</div>

    <input class="btn btn-primary" type="submit" name="Guardar" value="Guardar" />
    @Html.ActionLink("Volver", "Back", "Territory", new { @class= "btn btn-default" })
}

